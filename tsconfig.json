{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "ESNext",                    
    "lib": ["ESNext"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
}
